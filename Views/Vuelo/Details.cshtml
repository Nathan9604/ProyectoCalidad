@model AeropuertoCalidad.Models.Vuelo

@{
    ViewData["Title"] = "Detalle de Vuelo";
}

<h1>Detalle de Vuelo</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ruta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigorutaNavigation.Codigo)
        </dd>
        <dt class = "col-sm-2">
            Fecha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Capacidad Real
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacidadreal)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { ruta = ViewBag.ruta, fecha = ViewBag.fecha })
    <a asp-action="Index">Volver</a>
</div>
