                <a class="fa fa-pencil-square-o fa-2x" asp-action="Edit" asp-route-id="@item.Codigo" style="margin-right:10px;" />
                <a class="fa fa-book fa-2x" asp-action="Details" asp-route-id="@item.Codigo" style="margin-right:10px;" />
