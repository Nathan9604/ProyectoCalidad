@model AeropuertoCalidad.Models.Aeropuerto

@{
    ViewData["Title"] = "Editar Aeropuerto";
}

<head>
  <link rel="stylesheet" type="text/css" href="~/css/Interfaz.css">
</head>

<h1 class="SubTitle">Editar Aeropuerto</h1>

<section class="row">
    <article class="col"></article>
    <article class="Card col-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group row FirstItem">
                <div class="col Label">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row Items">
                <div class="col Label">
                    <label asp-for="Direccion" class="control-label"></label>
                </div>
                <div class="col-10">
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check row Items">
                <div class="col justify-content-center">
                    <label class="form-check-label">
                        Habilitado
                        <input class="form-check-input" asp-for="Habilitado" style="margin-left:5%;"/> 
                    </label>
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <input type="submit" value="Actualizar" class="ActionButtom" />
                <a asp-action="Index" class="BackButtom">Volver</a>
            </div>
        </form>
    </article>
    <article class="col"></article>
</section>