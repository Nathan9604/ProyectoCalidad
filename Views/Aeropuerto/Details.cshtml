@model AeropuertoCalidad.Models.Aeropuerto

@{
    ViewData["Title"] = "Detalles de Aeropuerto";
}

<head>
  <link rel="stylesheet" type="text/css" href="~/css/Interfaz.css">
</head>

<h1 class="SubTitle">Detalles del Aeropuerto</h1>

<section class="row">
    <article class="col"></article>
    <article class="Card col-6">
        <div class="row Items">
            <dt class = "col ValueName d-flex justify-content-end">
                @Html.DisplayNameFor(model => model.Nombre)
            <dd class = "col Value">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>
        <div class="row Items">
            <dt class = "col ValueName d-flex justify-content-end">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class = "col Value">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
        </div>
        <div class="row Items">
            <dt class = "col ValueName d-flex justify-content-end">
                @Html.DisplayNameFor(model => model.Habilitado)
            </dt>
            <dd class = "col Value">
                @Html.DisplayFor(model => model.Habilitado)
            </dd>
        </div>
        <div class="row d-flex justify-content-center">
            <a asp-action="Edit" asp-route-id="@Model.Codigo" class="ActionButtom">Editar</a>
            <a asp-action="Index" class="BackButtom">Volver</a>
        </div>
    </article>
    <article class="col"></article>
</section>