@model AeropuertoCalidad.Models.Aeropuerto

@{
    ViewData["Title"] = "Borrar Aeropuerto";
}

<head>
  <link rel="stylesheet" type="text/css" href="~/css/Interfaz.css">
  <link rel="stylesheet" href="~/lib/bootstrap/font-awesome-4.7.0/css/font-awesome.min.css">
</head>

<h1 class="SubTitle">Borrar Aeropuerto</h1>

<section class="row">
    <article class="col"></article>
    <article class="Card col-6">
        <h6 class="AlignCenter">Â¿Realmente desea borrar este aeropuerto?</h6>
        <div class="row Items">
            <dt class = "col ValueName d-flex justify-content-end">
                @Html.DisplayNameFor(model => model.Nombre)
            <dt>
            <dd class = "col Value">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </div>
        <div class="row Items">
            <dt class = "col ValueName d-flex justify-content-end">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class = "col Value">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
        </div>
        <div class="row Items">
            <dt class = "col ValueName d-flex justify-content-end">
                @Html.DisplayNameFor(model => model.Habilitado)
            </dt>
            <dd class = "col Value">
                @Html.DisplayFor(model => model.Habilitado)
            </dd>
        </div>
        <div class="row d-flex justify-content-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Codigo" />
